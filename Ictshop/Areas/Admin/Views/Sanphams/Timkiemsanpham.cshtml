
@model IEnumerable<HaiStore.Models.Sanpham>

@{
    ViewBag.Title = "Timmkiemsanpham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Timmkiemsanpham</h2>

@using (Html.BeginForm("Timkiemsanpham", "Sanphams", FormMethod.Get))
{
    <ul>
        <div style="float:right">
            <input type="text" placeholder="Bạn muốn tìm gì?" name="searching" />
            <input type="submit" value="Search" />
        </div>
    </ul>
}
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Tensp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Giatien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anhbia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tensp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giatien)
            </td>
            <td>
                <img src="@item.Anhbia" width="100" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Masp }) |
                @Html.ActionLink("Details", "Details", new { id = item.Masp }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Masp })
            </td>
        </tr>
    }

</table>

